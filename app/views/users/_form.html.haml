= form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :height
    = f.number_field :height
  .field
    = f.label :weight
    = f.number_field :weight
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit
